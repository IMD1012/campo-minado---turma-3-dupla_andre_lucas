void campoVisual(Celulas campoMinado[LINHAS][COLUNAS], int x, int y)
{
    if (campoMinado[x][y].temBomba != true)
    {

        campoMinado[x][y].campo = '_';
        for (int i = 0; i < LINHAS; i++)
        {
            for (int j = 0; j < COLUNAS; j++)
            {
                printf("%c", campoMinado[i][j].campo);
            }
            printf("\n");
        }
    }
    else
    {

        campoMinado[x][y].campo = '*';
        for (int i = 0; i < LINHAS; i++)
        {
            for (int j = 0; j < COLUNAS; j++)
            {
                printf("%c", campoMinado[i][j].campo);
            }
            printf("\n");
        }
    }
}

int main(int argc, char const *argv[])
{
    int x, y;
    int timeSpent;
    int decisao;

    inicioJogo();
    addBombas(QTD_BOMBAS, campoMinado);
    campoVisualInicial(campoMinado);

    printf("Digite a coordenada da celula que deseja revelar: ");
    scanf("%d %d", &x, &y);
    time_t begin = time(NULL);

    while (campoMinado[x][y].temBomba != true)
    {
        campoVisual(campoMinado, x, y);

        printf("Para digitar uma corrdenada digite 1\n");
        printf("Para saber o tempo decorrido digite 2\n");
        printf("Para pedir ajuda digite 3\n");
        scanf("%d", &decisao);

        if (decisao == 1)
        {
            printf("Digite a coordenada da celula que deseja revelar: ");
            scanf("%d %d", &x, &y);
        }
        if (decisao == 2)
        {
            time_t end = time(NULL);
            timeSpent == end - begin;
            printf("Seu tempo gasto no campo minado foi: %d segundos!\n", timeSpent);
        }
        if (decisao == 3)
        {
            printf("Pediu Ajuda!\n");
        } 
    }

    
    printf("PERDEU! Voce encontrou uma bomba :( \n");
    

    return 0;
}
